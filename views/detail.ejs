<div class="detail">

	<h1><%= product.name %></h1>
	<hr>
	<div class="row">
		<div class="col-sm-6">
			<img src="<%= product.image %>">
		</div>
		<div class="col-sm-6" id="details">
			<h4>MRP: <%= product.price %> / <%= product.unit %></h4>
			<hr>
			<h5>Product Description:</h5>
			<p><%= product.description %></p>
			<hr>			
			<form method="POST" action="/cart/<%= product.category %>/<%= product._id %>">
				<input id="quantity" placeholder="Quantity" type="number" name="quantity" min="0" max="<%= product.stock %>" class="form-control" required>
				<hr>
				<button id="cart" class="form-control">Add to Cart</button>
			</form>
		</div>
	</div>
</div>

