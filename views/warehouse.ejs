<div class="warehouse">
	<h1>Add Medicine to Shelf</h1>
	<br>
	<hr>
	<br>
	<form method="POST" action="/warehouse">
		<input class="input" type="text" name="productName" placeholder="Product Name" required>
		<br>
		<input class="input" type="number" name="price" placeholder="Price" required>
		<br>
		<select name="unit" id="dropdown">
			<option value="pc">Piece</option>
			<option value="kg">Kilogram</option>
		</select>
		<br>
		<input class="input" type="number" name="stock" placeholder="Stock" required>
		<br>
		<select name="category" id="dropdown">
			<option value="Baby Care">Baby Care</option>
		    <option value="Corona Special">Corona Special</option>
		    <option value="Skin Care">Skin Care</option>
		    <option value="Common Cold">Common Cold</option>
		    <option value="Dental Hygiene">Dental Hygiene</option>
		    <option value="Sanitary Needs">Sanitary Needs</option>
		    <option value="Body Pain">Body Pain</option>
		    <option value="Instant and Energy">Instant Energy</option>
		</select>
		<br>
		<input class="input" type="text" name="description" placeholder="Description" style="height: 100px" required>
		<br>
		<select name="status" id="dropdown">
			<option value="Offer">Offer</option>
		    <option value="none">None</option>
		</select>
		<br>
		<input class="input" type="text" name="image" placeholder="Image URL" required>
		<br>
		<button>Add to Shelf</button>
	</form>
</div>

